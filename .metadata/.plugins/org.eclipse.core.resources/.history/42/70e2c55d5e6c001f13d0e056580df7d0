    <h1>Welcome to Our Site!</h1>
    <a href="./login.html" class="button">Take me to Login</a>
    <div class="cursor-effect" id="cursorEffect"></div>

    <script>
        const cursorEffect = document.getElementById('cursorEffect');

        document.addEventListener('mousemove', (e) => {
            cursorEffect.style.left = `${e.pageX}px`;
            cursorEffect.style.top = `${e.pageY}px`;
        });

        document.addEventListener('mousemove', (e) => {
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            const color1 = `rgba(106, 17, 203, ${1 - y})`;
            const color2 = `rgba(37, 117, 252, ${1 - x})`;
            document.body.style.background = `linear-gradient(270deg, ${color1}, ${color2})`;
        });
    </script>
</body>
